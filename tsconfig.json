{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*", "src/kysely-config.ts"],
  "exclude": ["node_modules"]
}